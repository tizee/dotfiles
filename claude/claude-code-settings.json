{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "API_TIMEOUT_MS": "3000000",
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "true",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "HTTPS_PROXY": "http://127.0.0.1:1080",
    "HTTP_PROXY": "http://127.0.0.1:1080",
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_CODE_DISABLE_BACKGROUND_TASKS": "true"
  },
  "plansDirectory": ".claude/plans",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(sg:*)",
      "Bash(ast-grep:*)",
      "Bash(fd:*)",
      "Bash(which:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "TodoWrite",
      "mcp__nowledge-mem__memory_add",
      "mcp__nowledge-mem__thread_persist",
      "Bash(kimi:*)",
      "Bash(tmux -S '/var/folders/qf/ggwmlqts7hxbl633fmmzc2l80000gn/T//claude-tmux-sockets/python.sock' send-keys -l --:*)",
      "Bash(tmux -S:*)"
    ],
    "deny": [
      "WebFetch",
      "Glob",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ],
    "ask": [],
    "defaultMode": "default"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate-commands.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit|Read",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/validate-files.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/operation-logger.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/bash-logger.py"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/notification-handler.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/stop-handler.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/subagent-stop-handler.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/pre-compact-handler.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.config/claude/cc-statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "explanatory-output-style@claude-code-plugins": false,
    "frontend-design@claude-code-plugins": false,
    "learning-output-style@claude-code-plugins": false,
    "security-guidance@claude-code-plugins": false,
    "nowledge-mem@nowledge-community": true,
    "feature-dev@claude-code-plugins": true,
    "code-simplifier@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": false,
    "plugin-dev@claude-plugins-official": false
  },
  "alwaysThinkingEnabled": true
}
