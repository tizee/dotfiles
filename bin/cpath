#!/bin/zsh

# copy files realpath
cpath() {
    if [[ $# -eq 0 ]]; then
        echo "Usage: pathcp <file-or-directory> [...]" >&2
        echo "Copy absolute path(s) to clipboard" >&2
        return 1
    fi

    local paths=()
    for arg in "$@"; do
        if [[ ! -e "$arg" ]]; then
            echo "Error: '$arg' does not exist" >&2
            return 1
        fi
        paths+=("$(realpath "$arg")")
    done

    if [[ ${#paths[@]} -eq 1 ]]; then
        printf '%s' "${paths[1]}" | pbcopy
        echo "${paths[1]}"
    else
        printf '%s\n' "${paths[@]}" | pbcopy
        printf '%s\n' "${paths[@]}"
    fi
}

cpath "$@"
