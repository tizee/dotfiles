#!/usr/bin/env zsh

function _pbcopy(){
  case $(uname -s) in
    Darwin*)
      if [ -t 0 ]; then
        /usr/bin/pbcopy $@
      else
        /usr/bin/pbcopy -$@
      fi
      ;;
    Linux*)
       # xclip is avaliable in most Linux distributions
       # TODO test in Linux
       xclip -selection clipboard
      ;;
    *)
      exit 1
      ;;
  esac
}

_pbcopy "${@}"
