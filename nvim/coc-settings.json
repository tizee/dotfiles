{
  // coc
  "highlight.colors.enable": true,
  "coc.preferences.maxFileSize": "1MB",
  "coc.preferences.messageLevel":"error",
  "hover.autoHide":true,
  "list.source.outline.defaultAction":" quickfix",
  "coc.preferences.watchmanPath": "/usr/local/bin/watchman",
  // diagnostic
  "diagnostic.enable": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextLineSeparator": " . ",
  "diagnostic.messageTarget": "float",
  "diagnostic.hintSign": "",
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "!",
  // lua
  "sumneko-lua.enable": true,
  "sumneko-lua.enableNvimLuaDev": true,
  "sumneko-lua.inlayHints.refreshOnInsertMode": false,
  // codelens
  "codeLens.enable": true,
  "codeLens.separator": " ",
  "codeLens.subseparator": " | ",
  // javascript/typescript
  "tsserver.npm": "/usr/local/bin/npm",
  // lsp server without coc wrapper
  "languageserver": {
    // "sourcekit-lsp": {
    //   "filetypes": ["swift","objc","objcpp"],
    //   "command": "sourcekit-lsp"
    // },
    // see https://github.com/iamcco/coc-flutter/issues/127
     // "dart": {
     //   "command": "dart_lsp_server",
     //   "filetypes": ["dart"]
     // },
    // "golang": {
    //   "command": "gopls",
    //   "rootPatterns": ["go.mod"],
    //   "disableWorkspaceFolders": true,
    //   "filetypes": ["go"]
    // },
    // "rust": {
    //    "command": "rust-analyzer",
    //    "filetypes": ["rust"],
    //    "rootPatterns": ["Cargo.toml"]
    // },
    "cmake":{
      "command": "cmake-language-server",
      "filetypes": ["cmake"],
      "rootPatterns": ["build/"],
      "initializationOptions": {
        "buildDirectory": "build"
      }
    },
    "zls": {
      "command": "~/zls/zls",
      "filetypes": ["zig"]
    },
    "glsl": {
      "command": "/usr/local/bin/glslls",
      "filetypes": ["glsl"]
    },
    // "texlab": {
    //   "command": "texlab",
    //   "filetypes": ["tex"]
    // }
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["cpp", "c++", "objc", "objcpp"]
    },
    "ccls": {
      "command": "ccls",
      "rootPatterns": ["compile_commands.json"],
      "filetypes": ["c"]
    }
  },
  // tex
  "texlab.path": "~/.cargo/bin/texlab",
  // rust
  "rust-analyzer.enable": true,
  "rust-analyzer.procMacro.enable":false,
  "rust-analyzer.server.path": "~/.cargo/bin/rust-analyzer",
  "rust-analyzer.updates.channel": "stable",
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.inlayHints.typeHints": true,
  "rust-analyzer.inlayHints.typeHintsSeparator": "‣" ,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.inlayHints.chainingHintsSeparator": "‣ ",
  "rust-analyzer.inlayHints.refreshOnInsertMode": false,
  "rust-analyzer.hoverActions.enable": false,
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.lens.methodReferences": true,
  "rust-analyzer.lens.references": true,
  "rust-analyzer.lens.implementations": true,
  "rust-analyzer.debug.runtime": "vimspector",
  "rust-analyzer.debug.vimspector.configuration.name": "rust lldb",
  "rust-analyzer.terminal.startinsert": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  // c++/c
  // "clangd.enabled": true,
  // "clangd.inlayHints.sep": "‣",
  // "clangd.inlayHints.enable": true,
  // objective-c, swift, c++, c
  "sourcekit.enable": true,
  // "sourcekit.objc": true,
  // "sourcekit.objcpp": true,
  // emoji
  "coc.source.emoji.filetypes": ["markdown", "tmux", "vim"],
  "coc.source.emoji.enable": true,
  "coc.source.emoji.triggerCharacters": [":"],
  "git.addGBlameToVirtualText": true,
  "git.addGBlameToBufferVar": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    // "typescript",
    "typescrip.tsx",
    "json",
    "golang",
    "dart"
  ],
  "coc.preferences.jumpCommand": "vsplit",
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "sh.enable": true,
  // python
  "python.jediPath": "/Users/tizee/anaconda3/lib/python3.7/site-packages ",
  "python.linting.pylintPath": "/Users/tizee/anaconda3/bin/pylint",
  "python.pythonPath": "python3",
  // javascript
  "eslint.autoFixOnSave": true,
  "suggest.snippetIndicator": "ﰴ",
  // snippets
  "snippets.extends": {
    "cpp": ["cpp"],
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"],
    "typescriptreact":  ["javascript"]
  },
  // load vscode snippets
  "snippets.textmateSnippetsRoots": ["$HOME/.config/nvim/code_snippets"],
  // do not use snippets as ultisnips
  "snippets.ultisnips.directories":["$HOME/.config/nvim/UltiSnips"],
  // golang
  "go.goplsOptions": {
    "completeUnimported": true
  },
  // flutter
  "flutter.sdk.path": "~/dev/grepo_dart/flutter",
  "flutter.trace.server": "off",
  "flutter.lsp.debug": false,
  // FIXME until coc-flutter fixed the integration problem with Flutter 2.5.0
  "flutter.lsp.initialization.onlyAnalyzeProjectsWithOpenFiles": false,
  "flutter.lsp.initialization.closingLabels": true,
  "flutter.lsp.initialization.suggestFromUnimportedLibraries": true,
  "flutter.lsp.initialization.outline": true,
  "flutter.lsp.initialization.flutterOutline": true,
  "dart.enableSdkFormatter": true,
  "dart.showTodos": true,
  "dart.lineLength": 80,
  "flutter.enabled": true,
  // vue
  "vetur.format.enable": true,
  "vetur.format.defaultFormatter.pug": "prettier",
  "vetur.format.defaultFormatter.less": "prettier",
  // eye candies - icons
  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "function": "ƒ",
    "reference": "渚",
    "constant": "",
    "method": "",
    "class": "",
    "interface": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    "default": "",
    "text": "",
    "struct": "פּ",
    "unit": "",
    "event": "鬒",
    "field": "料"
  },
  // json
  "json.enable": true,
  "json.schemaDownload.enable": true,
  "json.schemas": [
    {
      "fileMatch": ["/clang-format.json"],
      "url":"https://json-schema.org/draft/2019-09/schema"
    },
    {
      "fileMatch": [
        "/.vimspector.json"
      ],
      "url": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json"
    },
    {
      "fileMatch": [
        "/.gadgets.json"
      ],
      "url": "https://puremourning.github.io/vimspector/schema/gadgets.schema.json"
    }
  ],
  // toml
  "toml.enabled": true,
  "toml.formatter.alignEntries": true,
  // yaml
  "yaml.enable": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.format.bracketSpacing": true,
  "yaml.schemas":{
    "/Users/tizee/.config/local_json_schema/docker-compose-spec.json": "docker-compose.yml",
    "/Users/tizee/.config/local_json_schema/gemrc.json": [".gemrc","gemrc"],
    "https://json.schemastore.org/clang-format.json":[".clang-format","*.clang-format","clang-format.yml","clang-format.yaml"]
    // "/Users/tizee/.config/local_json_schema/clang-format.json":[".clang-format","*.clang-format","clang-format.yml","clang-format.yaml"]
  },
  // ruby
  "solargraph.logLevel": "debug",
  "solargraph.commandPath": "/Users/tizee/.gem/bin/solargraph",
  "solargraph.promptDownload": false,
  "solargraph.useBundler": false,
  "solargraph.hover": true,
  "solargraph.diagnostics": true,
  "solargraph.rename": true,
  // coc-sources
  "coc.source.word.enable": true,
  "coc.source.word.filetypes": ["markdown","json","yaml"],
  "coc.source.word.priority": -50,
  // dictionary
  "coc.source.dictionary.enable": true,
  "coc.source.dictionary.filetypes": ["markdown","json","yaml"],
  "coc.source.dictionary.priority": -50,
  "snippets.ultisnips.pythonPrompt": false
}
