#!/usr/bin/env zsh

repo() {
  if [ $SYSTEM = Darwin ]; then
    if [[ -z $1 ]];then
      cd $HOME/dev/$(fd -t d -d 1 'grepo_.*' $HOME/dev --exec basename | fzf)
      local repo_name="$(fd -t d -d 1 . | fzf --preview "tree -L 1 {+1}")"
      if [[ -n $repo_name ]];then
        cd "$repo_name"
      fi
    else
      cd "$HOME/dev/grepo_$1";
      local repo_name="$(fd -t d -d 1 . | fzf --preview "tree -L 1 {+1}")"
      if [[ -n $repo_name ]];then
        cd "$repo_name"
      fi
    fi
  else
    echo "Only works in macOS"
  fi
}

repo
